# App URLs
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE=http://localhost:3000/api

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/greia?schema=public"

# Authentication
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret-key

# AWS Configuration
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=greia-media
CLOUDFRONT_URL=your-cloudfront-distribution-url

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Stripe Price IDs
STRIPE_PRICE_ID_MEMBERSHIP=price_membership_monthly
STRIPE_PRICE_ID_SERVICE_WEEKLY=price_service_weekly
STRIPE_PRICE_ID_EXPOSURE_BASIC=price_exposure_basic
STRIPE_PRICE_ID_EXPOSURE_PLUS=price_exposure_plus
STRIPE_PRICE_ID_EXPOSURE_PRO=price_exposure_pro

# Email Configuration (SES)
SES_FROM_EMAIL=no-reply@greia.com
SES_REGION=eu-west-1

# Optional Gmail SMTP (backup)
GMAIL_USER=your-gmail
GMAIL_PASS=your-app-specific-password

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OpenAI API (optional)
OPENAI_API_KEY=your-openai-api-key

# Feature Flags
ENABLE_GOOGLE_AUTH=false
ENABLE_AI_FEATURES=false
ENABLE_BANK_TRANSFERS=false